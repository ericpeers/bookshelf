<h1>Add a rating for book ID <%= @book.id %> / <%= @book.title %></h1>
<%= form_for ([@book, @book.ratings.build]) do |f| %>
<% if @rating.errors.any? %>
<div id="error_explaining">
  <h2>
    <%= pluralize(@rating.errors.count, "rating") %> prevented this rating from being saved:
  </h2>
  <ul>
    <% @rating.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %> <!--rating errors -->

<!-- not capturing user right now. Add this later when we have user /logins -->
<!-- USER_EXTEND -->
<p>

  <%= f.label :was_read, "I read this book: " %>
  <%= f.check_box :was_read %><br>
</p>
<p>
  <%= f.label :rating, "Rating 1-10: " %>
  <%= f.text_field :rating %>
</p>

<p><%= f.submit %></p>
<% end %> <!-- form_for -->

<%= link_to 'Go back to book listings', books_path %>
